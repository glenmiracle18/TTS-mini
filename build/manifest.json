{
  "manifest_version": 3,
  "name": "Speechify Mini (Practice)",
  "version": "0.1.0",
  "description": "Reads selected text from the page with SpeechSynthesis.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Speechify Mini"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
